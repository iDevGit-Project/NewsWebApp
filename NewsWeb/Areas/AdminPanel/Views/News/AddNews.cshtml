@model NewsWeb.Models.TBL_News
@inject NewsWeb.PublicClasses.ConvertDate convertDate
@{
    ViewData["Title"] = "ثبت خبر جدید | شیراز نیوز";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}
